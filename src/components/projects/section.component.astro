---
const { class: className, name } = Astro.props
---


<div class:list={[className, "border"]}>
  <h1>{name}</h1>
  <slot name="projects" />
  <slot name="icons" />
</div>

<style>
  h1 {
    font-size: large;
    line-height: 1.5rem;
  }
  
  .border {
		border-radius: 15px;
		border: 1px solid var(--color-primary);
		display: flex;
    flex-direction: column;
    align-items: center;
		gap: 0.5rem;
		padding: 1rem;
	}
</style>